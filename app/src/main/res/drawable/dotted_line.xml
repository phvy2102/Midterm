<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" />
    </item>

    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#E3E3E3"
                android:dashWidth="8dp"
                android:dashGap="3dp" />
        </shape>
    </item>

</layer-list>